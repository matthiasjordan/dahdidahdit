<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ListPreference
        android:key="sendingtrainer_text_generator"
        android:defaultValue="random"
        android:entries="@array/text_generator_labels_2"
        android:entryValues="@array/text_generator_values_2"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/text_generator_type"
        app:useSimpleSummaryProvider="true" />

    <com.paddlesandbugs.dahdidahdit.settings.NumericPreference
        android:key="sendingtrainer_text_first_n"
        android:defaultValue="50"
        android:title="@string/selfdefined_text_first_n"
        android:max="2000"
        app:min="1"
        app:showSeekBarValue="true"
        app:useSimpleSummaryProvider="true" />

    <SeekBarPreference
        android:key="sendingtrainer_current_wpm"
        android:defaultValue="@integer/default_value_wpm_sending"
        android:max="40"
        android:title="@string/words_per_minute"
        app:min="10"
        app:seekBarIncrement="1"
        app:showSeekBarValue="true"
        app:useSimpleSummaryProvider="true" />

    <SwitchPreference
        android:key="sendingtrainer_only_koch_chars"
        android:defaultValue="false"
        android:title="@string/allow_only_copytrainer_chars" />


</PreferenceScreen>