<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ListPreference
        android:key="copytrainer_to_sequence_level"
        />

    <SeekBarPreference
        android:defaultValue="20"
        android:key="copytrainer_to_wpm"
        android:max="40"
        android:title="@string/words_per_minute"
        app:min="10"
        app:seekBarIncrement="1"
        app:showSeekBarValue="true"
        app:useSimpleSummaryProvider="true" />

    <SeekBarPreference
        android:defaultValue="20"
        android:key="copytrainer_to_effwpm"
        android:max="40"
        android:title="@string/eff_words_per_minute"
        app:min="10"
        app:seekBarIncrement="1"
        app:showSeekBarValue="true"
        app:useSimpleSummaryProvider="true" />

    <SeekBarPreference
        android:defaultValue="10"
        android:key="copytrainer_to_wordlength_max"
        android:max="12"
        android:title="@string/wordlength_max"
        app:min="3"
        app:seekBarIncrement="1"
        app:showSeekBarValue="true"
        app:useSimpleSummaryProvider="true" />

    <ListPreference
        android:defaultValue="5"
        android:entries="@array/QRX_labels"
        android:entryValues="@array/QRX_values"
        android:key="copytrainer_to_qsb"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/QSB"
        app:useSimpleSummaryProvider="true" />

    <ListPreference
        android:defaultValue="5"
        android:entries="@array/QRX_labels"
        android:entryValues="@array/QRX_values"
        android:key="copytrainer_to_qrm"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/QRM"
        app:useSimpleSummaryProvider="true" />

    <ListPreference
        android:defaultValue="5"
        android:entries="@array/QRX_labels"
        android:entryValues="@array/QRX_values"
        android:key="copytrainer_to_qrn"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/QRN"
        app:useSimpleSummaryProvider="true" />

    <SeekBarPreference
        android:defaultValue="@integer/default_value_distribution"
        android:key="copytrainer_to_distribution"
        android:max="10"
        android:title="@string/distribution"
        app:min="0"
        app:seekBarIncrement="1"
        app:showSeekBarValue="true"
        app:updatesContinuously="true"
        app:useSimpleSummaryProvider="false" />

</PreferenceScreen>