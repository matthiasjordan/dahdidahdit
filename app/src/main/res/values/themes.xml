<resources>
    <!-- Base application theme. -->
    <style name="Theme.Dahdidahdit" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Smaller text in tooltips
            ?attr/textAppearanceSubtitle1 ??-->
        <item name="android:textColor">@color/theme_dark_gray</item>

        <!-- styles ?attr/textAppearanceHeadline5
                    @style/TextAppearance.MyTheme.Code
                    -->
        <item name="android:textColorPrimary">@color/theme_dark_gray</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryVariant">@color/theme_primary_darker</item>
        <item name="colorOnPrimary">@color/theme_primary_TextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme_secondary</item>
        <item name="colorSecondaryVariant">@color/theme_secondary_darker</item>
        <item name="colorOnSecondary">@color/theme_secondary_TextColor</item>
        <item name="colorError">@color/theme_error_TextColor</item>

        <item name="android:windowBackground">@color/theme_background_day</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?colorPrimaryVariant</item>

        <!-- Text input boxes -->
        <item name="textInputStyle">@style/TextInputLayoutStyle</item>
        <item name="editTextStyle">@style/TextInputEditTextStyle</item>
        <item name="inputBoxBackgroundColor">@color/theme_bright_gray</item>

        <!--Material type attributes-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.MyTheme.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.MyTheme.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.MyTheme.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.MyTheme.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.MyTheme.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.MyTheme.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MyTheme.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.MyTheme.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MyTheme.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MyTheme.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.MyTheme.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MyTheme.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.MyTheme.Overline</item>

        <item name="appWidgetRadius">8dp</item>
        <item name="appWidgetPadding">4dp</item>
        <item name="appWidgetInnerRadius">4dp</item>

        <item name="toolbarStyle">@style/Theme.Dahdidahdit.ToolbarStyle</item>
    </style>

    <style name="Theme.Dahdidahdit.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Dahdidahdit.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Dahdidahdit.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Dahdidahdit.ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?colorPrimary</item>
        <item name="android:theme">@style/Theme.Dahdidahdit.ToolbarTheme</item>
    </style>

    <style name="Theme.Dahdidahdit.ToolbarTheme">
        <item name="android:textColorPrimary">?colorOnPrimary</item>
        <item name="android:textColorSecondary">?colorOnPrimary</item>
    </style>

    <style name="Theme.Dahdidahdit.BorderlessButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="Theme.Dahdidahdit.OnScreenPaddlesTheme">
        <item name="android:background">@color/theme_background_day</item>
    </style>

</resources>